{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@jhasuraj01/config",
  "version": "0.0.1",
  "description": "Default Typescript Configuration for Packages",
  "main": "./tsconfig.json",
  "module": "./tsconfig.json",
  "bin": "./tsconfig.json",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clear": "rimraf node_modules dist"
  },
  "exports": {
    "./eslint": {
      "node": "./.eslintrc.json",
      "require": "./.eslintrc.json",
      "import": "./.eslintrc.json",
      "default": "./.eslintrc.json"
    },
    "./ts": {
      "node": "./tsconfig.json",
      "require": "./tsconfig.json",
      "import": "./tsconfig.json",
      "default": "./tsconfig.json"
    },
    "./tsup": {
      "node": "./tsup.config.js",
      "require": "./tsup.config.js",
      "import": "./tsup.config.js",
      "default": "./tsup.config.js"
    }
  },
  "keywords": [],
  "author": {
    "email": "contact@jhasuraj.com",
    "name": "Suraj Jha",
    "url": "https://jhasuraj.com"
  },
  "contributors": [],
  "license": "MIT",
  "engines": {
    "node": "v20.11.0",
    "pnpm": "^8.15.1"
  },
  "packageManager": "^pnpm@8.15.1",
  "nx": {},
  "devDependencies": {
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}