{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@jhasuraj01/hello",
  "version": "0.0.1",
  "description": "Suraj's Hello",
  "main": "./dist/cjs/index.js",
  "module": "./dist/mjs/index.js",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --ext .ts,tsx,js,jsx src/ --fix",
    "lint:check": "eslint --ext .ts,tsx,js,jsx src/",
    "build:amd": "tsc -p ./tsconfig-amd.json",
    "build:cjs": "tsc -p ./tsconfig-cjs.json",
    "build:mjs": "tsc -p ./tsconfig-mjs.json",
    "build:sys": "tsc -p ./tsconfig-sys.json",
    "build:umd": "tsc -p ./tsconfig-umd.json",
    "build:types": "tsc -p ./tsconfig-types.json",
    "build:all": "pnpm build:amd && pnpm build:cjs && pnpm build:mjs && pnpm build:types",
    "build": "pnpm build:mjs && pnpm build:types",
    "clear": "rimraf node_modules dist"
  },
  "devDependencies": {
    "@jhasuraj01/eslint": "workspace:*",
    "@jhasuraj01/tsconfig": "workspace:*",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "keywords": [],
  "author": {
    "email": "contact@jhasuraj.com",
    "name": "Suraj Jha",
    "url": "https://jhasuraj.com"
  },
  "contributors": [],
  "license": "MIT",
  "engines": {
    "node": "v20.11.0",
    "pnpm": "^8.15.1"
  },
  "packageManager": "^pnpm@8.15.1",
  "nx": {}
}
